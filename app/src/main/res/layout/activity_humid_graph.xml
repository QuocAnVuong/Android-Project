<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HumidGraphActivity"
    android:background="#05103A">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Humidity"
        android:textColor="#fff"
        android:textSize="25dp"
        app:layout_marginStartPercent="32%"
        app:layout_marginTopPercent="2%"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="36%"/>
    <ImageButton
        android:id="@+id/last_page1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/previous"
        android:scaleType="fitXY"
        android:background="#05103A"
        app:layout_marginStartPercent="2%"
        app:layout_marginTopPercent="2%"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="7%"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="80%"
        app:layout_marginTopPercent="15%"
        app:layout_marginStartPercent="10%"
        app:layout_widthPercent="80%"

        >
        <com.anychart.AnyChartView
            android:id="@+id/any_chart_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>